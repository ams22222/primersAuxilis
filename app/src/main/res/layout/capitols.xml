<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <Button
        android:id="@+id/btn_apt"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:backgroundTint="#336013"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Teoria"
        app:cornerRadius="-1dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_per"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:backgroundTint="#336013"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="PERFIL"
        app:cornerRadius="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_mj"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:backgroundTint="#336013"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="JOCS"
        app:cornerRadius="-1dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_per"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_cap"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_cap"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:backgroundTint="#449F04"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="VALIDAR"
        app:cornerRadius="-1dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline20"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="643dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_apt"
        tools:layout_editor_absoluteX="-1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="231dp"
                android:layout_height="41dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:gravity="center|start"
                android:text="Capitol 1: Emergències"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/cb_questionari1"
                android:layout_width="124dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:checked="false"
                android:clickable="false"
                android:text="Qüestionari"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <CheckBox
                android:id="@+id/cb_questionari3"
                android:layout_width="124dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:checked="false"
                android:clickable="false"
                android:text="Qüestionari"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <CheckBox
                android:id="@+id/cb_questionari2"
                android:layout_width="124dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:checked="false"
                android:clickable="false"
                android:text="Qüestionari"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="231dp"
                android:layout_height="41dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="136dp"
                android:gravity="center|start"
                android:text="Capitol 2: Prevencions"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <ImageView
                android:id="@+id/ivCap2"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:srcCompat="@drawable/lock" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="231dp"
                android:layout_height="41dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:gravity="center|start"
                android:text="Capitol 3: RCP"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toBottomOf="@+id/ivCap2" />

            <ImageView
                android:id="@+id/ivCap3"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline15"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                app:srcCompat="@drawable/lock" />

            <Button
                android:id="@+id/btn_test"
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#449F04"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="TEST"
                app:cornerRadius="-1dp"
                app:layout_constraintStart_toEndOf="@+id/cb_questionari1"
                app:layout_constraintTop_toBottomOf="@+id/textView13"
                app:strokeColor="#000000"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btn_test3"
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#449F04"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="TEST"
                android:visibility="gone"
                app:cornerRadius="-1dp"
                app:layout_constraintStart_toEndOf="@+id/cb_questionari1"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                app:strokeColor="#000000"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btn_test2"
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#449F04"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="TEST"
                android:visibility="gone"
                app:cornerRadius="-1dp"
                app:layout_constraintStart_toEndOf="@+id/cb_questionari2"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:strokeColor="#000000"
                app:strokeWidth="1dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>